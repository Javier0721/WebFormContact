@model WebAppFormMVC. Models. ContactMessage

@{
    ViewData["Title"] = "Formulario de Contacto";
}

@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success">
@TempData["SuccessMessage"]
</div>
}
<form asp-action="Submit" method="post">
<div>
<label>Nombre :< /label>
<input asp-for="Nombre" class="form-control" />
<span asp-validation-for="Nombre" class="text-danger"></span>
</div>

<div>
<label>Correo Electronico :< /label>
<input asp-for="Correo" class="form-control" />
<span asp-validation-for="Correo" class="text-danger"></span>
</div>

<div>
<label>Mensaje :< /label>
<textarea asp-for="Mensaje" class="form-control"></textarea>
<span asp-validation-for="Mensaje" class="text-danger"></span>
</div>

<button type="submit" class="btn btn-primary">Enviar</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />

<h3>Mensajes Recibidos</h3>
<table class="table table-bordered">
<thead>
<tr>
<th>Nombre</th>
<th>Correo</th>
<th>Mensaje</th>
</tr>
</thead>
<tbody>
@foreach (var mensaje in Model.Mensajes)
{
<tr>

<td>@mensaje.Nombre</td>
<td>@mensaje.Correo</td>
<td>@mensaje.Mensaje</td>
</tr>
}
</tbody>
</table>

@section Scripts {
partial name="_ValidationScriptsPartial" />
}
